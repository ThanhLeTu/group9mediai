<h1 class="text-3xl text-blue-600 font-bold text-center mt-10 mb-6 flex justify-center items-center gap-2">
    🧬 Danh sách lịch tiêm chủng
  </h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 px-10 pb-16">
    <% schedules.forEach(schedule => { %>
      <% if (schedule.status !== 'completed') { %>
        <div class="bg-white shadow-md rounded-xl p-6 hover:shadow-lg transition duration-300 flex flex-col justify-between">
          <div>
            <h2 class="text-xl font-bold mb-2 text-gray-800 flex items-center gap-2">
              💉 <%= schedule.vaccineName %>
            </h2>
            <p class="mb-1 text-sm text-gray-600">📅 <strong>Ngày hẹn:</strong> <%= new Date(schedule.scheduledDate).toLocaleDateString() %></p>
            <p class="mb-1 text-sm text-gray-600">👤 <strong>Người tiêm:</strong> <%= schedule.userId?.fullName || 'Ẩn danh' %></p>
            <p class="mb-1 text-sm text-gray-600">💉 <strong>Mũi:</strong> <%= schedule.dose %></p>
            <p class="mb-2 text-sm">
              📌 <strong>Trạng thái:</strong> 
              <span class="<%= schedule.status === 'scheduled' ? 'text-yellow-500' : 'text-green-500' %>">
                <%= schedule.status %>
              </span>
            </p>
          </div>
          
          <!-- Nút đặt lịch -->
          <div class="text-right mt-4">
            <a href="/booking-vaccine/<%= schedule._id %>" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-full text-sm transition">
              Đặt lịch tiêm
            </a>
          </div>
        </div>
      <% } %>
    <% }) %>
  </div>
  