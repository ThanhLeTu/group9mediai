<div class="max-w-5xl mx-auto px-6 py-10">
    <h2 class="text-3xl font-bold text-blue-700 mb-6">📄 Lịch sử đặt khám</h2>
  
    <% if (appointments.length === 0) { %>
      <p class="text-gray-600">Bạn chưa có lịch hẹn nào.</p>
    <% } else { %>
      <div class="space-y-4">
        <% appointments.forEach(appt => { %>
          <div class="bg-white shadow p-4 rounded-lg border">
            <p><strong>Bác sĩ:</strong> <%= appt.doctorId?.fullName || 'Không xác định' %></p>
            <p><strong>Chuyên khoa:</strong> <%= appt.doctorId?.specializationId?.name || 'Chưa rõ' %></p>
            <p><strong>Ngày khám:</strong> <%= new Date(appt.date).toLocaleDateString('vi-VN') %></p>
            <p><strong>Giờ:</strong> <%= appt.time %></p>
            <p><strong>Lý do:</strong> <%= appt.reason %></p>
            <p><strong>Trạng thái:</strong> <%= appt.status %></p>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
  