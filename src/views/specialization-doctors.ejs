<div class="max-w-7xl mx-auto mt-16 px-4">
    <!-- Tiêu đề chuyên khoa -->
    <div class="text-center mb-10">
      <h2 class="text-4xl font-bold text-indigo-700 drop-shadow-sm">👨‍⚕️ Bác sĩ chuyên khoa: <%= specialization.name %></h2>
      <p class="mt-2 text-lg text-gray-600"><%= specialization.description || 'Danh sách bác sĩ theo chuyên khoa.' %></p>
    </div>
  
    <!-- Danh sách bác sĩ -->
    <% if (doctors.length === 0) { %>
      <p class="text-center text-gray-500">Không có bác sĩ nào thuộc chuyên khoa này.</p>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
        <% doctors.forEach(doctor => { %>
            <div class="bg-white rounded-2xl shadow hover:shadow-lg overflow-hidden border transition-all">
                <img src="<%= doctor.avatar || '/static/images/default-doctor.jpg' %>" alt="Ảnh bác sĩ"
                     class="w-full h-48 object-cover">
              
                <div class="p-5 text-left">
                  <h4 class="text-xl font-semibold text-gray-800 mb-1"><%= doctor.fullName %></h4>
                  <p class="text-sm text-gray-500 italic mb-2">
                    🏥 <%= doctor.hospitalId?.name || 'Chưa rõ bệnh viện' %>
                  </p>
                  <a href="/booking/<%= doctor._id %>" class="inline-block px-4 py-2 bg-blue-600 text-white text-sm rounded hover:bg-blue-700 transition">
                    Đặt khám
                  </a>
                </div>
              </div>
        <% }) %>
      </div>
    <% } %>
  
    <!-- Nút quay lại -->
    <div class="text-center mt-12">
      <a href="/specializations" class="inline-block px-6 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition">
        ⬅ Quay lại danh sách chuyên khoa
      </a>
    </div>
  </div>
  