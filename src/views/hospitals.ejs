<div class="text-center mt-20 px-4">
    <h1 class="text-4xl font-extrabold text-blue-700 drop-shadow-sm">🏥 Danh sách bệnh viện</h1>
    <p class="mt-4 text-lg text-gray-600">Các bệnh viện hợp tác với hệ thống Medi9 Health.</p>
  </div>
  
  <div class="flex justify-center mt-10 space-x-4">
    <a href="/" class="px-5 py-2 rounded-lg bg-gray-200 text-gray-700 hover:bg-gray-300 transition">👨‍⚕️ Bác sĩ</a>
    <a href="/hospitals" class="px-5 py-2 rounded-lg bg-blue-700 text-white hover:bg-blue-800 transition">🏥 Bệnh viện</a>
    <a href="/specializations" class="px-5 py-2 rounded-lg bg-gray-200 text-gray-700 hover:bg-gray-300 transition">🩺 Chuyên khoa</a>
  </div>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-12 px-4 pb-16">
    <% hospitals.forEach(hospital => { %>
        <div class="bg-white rounded-2xl shadow p-6 border hover:shadow-lg text-left transition-all">
          <h3 class="text-lg font-bold text-blue-800"><%= hospital.name %></h3>
          <p class="text-sm text-gray-600 mt-2">📍 <%= hospital.address || 'Địa chỉ chưa cập nhật' %></p>
          <p class="text-sm text-gray-500 mt-1">📞 <%= hospital.phone || 'Chưa có số điện thoại' %></p>
      
          <!-- ✅ Nút xem chi tiết -->
          <a href="/hospitals/<%= hospital._id %>" class="inline-block mt-3 px-4 py-2 bg-blue-600 text-white text-sm rounded hover:bg-blue-700 transition">
            Xem chi tiết
          </a>
        </div>
      <% }) %>
      
  
  