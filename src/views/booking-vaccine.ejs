
<div class="max-w-xl mx-auto mt-12 bg-white shadow-md rounded-lg p-6">
  <h2 class="text-2xl font-bold text-blue-600 mb-4">🕒 Đặt giờ tiêm chủng</h2>

  <form action="/booking-vaccine/<%= schedule._id %>" method="POST" class="space-y-4">
    <div>
      <label class="block text-gray-700 font-medium">Tên vắc xin:</label>
      <p class="font-semibold"><%= schedule.vaccineName %></p>
    </div>

    <div>
      <label class="block text-gray-700 font-medium">Ngày tiêm:</label>
      <p><%= new Date(schedule.scheduledDate).toLocaleDateString() %></p>
    </div>

    <div>
      <label for="time" class="block text-gray-700 font-medium">Chọn giờ:</label>
      <select id="time" name="time" required class="w-full mt-1 border rounded px-3 py-2">
        <option value="">-- Chọn giờ tiêm --</option>
        <option value="08:00">08:00 sáng</option>
        <option value="09:00">09:00 sáng</option>
        <option value="10:00">10:00 sáng</option>
        <option value="13:00">01:00 chiều</option>
        <option value="14:00">02:00 chiều</option>
        <option value="15:00">03:00 chiều</option>
      </select>
    </div>

    <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">
      ✅ Xác nhận lịch tiêm
    </button>
  </form>
</div>

